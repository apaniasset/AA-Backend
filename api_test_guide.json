{
    "project": "ApniAsset Backend API",
    "base_url": "http://localhost:1700/api",
    "notes": "All state-changing and data-fetching actions use POST. IDs must be passed in the request body.",
    "endpoints": {
        "admin": {
            "auth": {
                "login": {
                    "method": "POST",
                    "url": "/admin/login",
                    "body": {
                        "identifier": "admin@example.com",
                        "password": "password123"
                    }
                },
                "logout": {
                    "method": "POST",
                    "url": "/admin/logout",
                    "body": {}
                },
                "forgot_password": {
                    "method": "POST",
                    "url": "/admin/forgot-password",
                    "body": {
                        "identifier": "admin@example.com"
                    }
                },
                "reset_password": {
                    "method": "POST",
                    "url": "/admin/reset-password",
                    "body": {
                        "identifier": "admin@example.com",
                        "otp": "123456",
                        "newPassword": "newpassword123"
                    }
                }
            },
            "users": {
                "list": {
                    "method": "POST",
                    "url": "/admin/users/list",
                    "body": {}
                },
                "create": {
                    "method": "POST",
                    "url": "/admin/users/create",
                    "body": {
                        "name": "Staff User",
                        "email": "staff@example.com",
                        "password": "password123",
                        "role": "staff"
                    }
                },
                "show": {
                    "method": "POST",
                    "url": "/admin/users/show",
                    "body": {
                        "id": 1
                    }
                },
                "update": {
                    "method": "POST",
                    "url": "/admin/users/update",
                    "body": {
                        "id": 1,
                        "name": "Updated Staff"
                    }
                },
                "delete": {
                    "method": "POST",
                    "url": "/admin/users/delete",
                    "body": {
                        "id": 1
                    }
                },
                "reset_password": {
                    "method": "POST",
                    "url": "/admin/users/reset-password",
                    "body": {
                        "id": 1,
                        "password": "newpassword123"
                    }
                },
                "update_status": {
                    "method": "POST",
                    "url": "/admin/users/update-status",
                    "body": {
                        "id": 1,
                        "status": "active"
                    }
                }
            },
            "location": {
                "countries": {
                    "list": {
                        "method": "POST",
                        "url": "/admin/countries/list",
                        "body": {}
                    },
                    "create": {
                        "method": "POST",
                        "url": "/admin/countries/create",
                        "body": {
                            "name": "India",
                            "short_name": "IN"
                        }
                    },
                    "update": {
                        "method": "POST",
                        "url": "/admin/countries/update",
                        "body": {
                            "id": 1,
                            "name": "Updated India"
                        }
                    },
                    "delete": {
                        "method": "POST",
                        "url": "/admin/countries/delete",
                        "body": {
                            "id": 1
                        }
                    }
                },
                "states": {
                    "list": {
                        "method": "POST",
                        "url": "/admin/states/list",
                        "body": {}
                    },
                    "create": {
                        "method": "POST",
                        "url": "/admin/states/create",
                        "body": {
                            "state_name": "Maharashtra",
                            "country_id": 1
                        }
                    },
                    "update": {
                        "method": "POST",
                        "url": "/admin/states/update",
                        "body": {
                            "id": 1,
                            "state_name": "Updated State"
                        }
                    },
                    "delete": {
                        "method": "POST",
                        "url": "/admin/states/delete",
                        "body": {
                            "id": 1
                        }
                    }
                }
            },
            "settings": {
                "site": {
                    "list": {
                        "method": "POST",
                        "url": "/admin/settings/site/list",
                        "body": {}
                    },
                    "update": {
                        "method": "POST",
                        "url": "/admin/settings/site/update",
                        "body": {
                            "id": 1,
                            "site_name": "New Name"
                        }
                    }
                },
                "custom_fields": {
                    "list": {
                        "method": "POST",
                        "url": "/admin/settings/custom-fields/list",
                        "body": {}
                    },
                    "create": {
                        "method": "POST",
                        "url": "/admin/settings/custom-fields/create",
                        "body": {
                            "name": "Field 1"
                        }
                    }
                }
            }
        },
        "merchant": {
            "auth": {
                "login": {
                    "method": "POST",
                    "url": "/merchant/login",
                    "body": {
                        "identifier": "merchant@example.com",
                        "password": "password123"
                    }
                },
                "send_otp": {
                    "method": "POST",
                    "url": "/merchant/send-otp",
                    "body": {
                        "identifier": "9876543210"
                    }
                }
            },
            "management": {
                "list": {
                    "method": "POST",
                    "url": "/merchant/list",
                    "body": {}
                },
                "create": {
                    "method": "POST",
                    "url": "/merchant/create",
                    "body": {
                        "name": "Merchant Name",
                        "email": "m@example.com",
                        "password": "password123",
                        "merchant_type": "broker"
                    }
                },
                "show": {
                    "method": "POST",
                    "url": "/merchant/show",
                    "body": {
                        "id": 1
                    }
                },
                "update": {
                    "method": "POST",
                    "url": "/merchant/update",
                    "body": {
                        "id": 1,
                        "name": "Updated Merchant"
                    }
                },
                "delete": {
                    "method": "POST",
                    "url": "/merchant/delete",
                    "body": {
                        "id": 1
                    }
                }
            }
        },
        "affiliate": {
            "management": {
                "list": {
                    "method": "POST",
                    "url": "/affiliate/list",
                    "body": {}
                },
                "create": {
                    "method": "POST",
                    "url": "/affiliate/create",
                    "body": {
                        "name": "Affiliate User",
                        "email": "a@example.com",
                        "password": "password123",
                        "referral_code": "CODE123"
                    }
                },
                "update": {
                    "method": "POST",
                    "url": "/affiliate/update",
                    "body": {
                        "id": 1,
                        "name": "Updated Affiliate"
                    }
                }
            }
        },
        "user": {
            "management": {
                "list": {
                    "method": "POST",
                    "url": "/user/list",
                    "body": {}
                },
                "create": {
                    "method": "POST",
                    "url": "/user/create",
                    "body": {
                        "name": "Regular User",
                        "email": "u@example.com",
                        "password": "password123"
                    }
                },
                "update": {
                    "method": "POST",
                    "url": "/user/update",
                    "body": {
                        "id": 1,
                        "name": "Updated User"
                    }
                }
            }
        }
    }
}