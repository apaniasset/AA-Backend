{
    "info": {
        "_postman_id": "d9909d94-dd30-49c9-aba6-d5117d9ee9e6",
        "name": "ApniAsset API (Full System)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Properties",
            "item": [
                {
                    "name": "Public List (Approved Only)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{base_url}}/properties"
                    }
                },
                {
                    "name": "Search Properties (Dynamic)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/properties?search=Mumbai&listing_type=Sale",
                            "query": [
                                {
                                    "key": "search",
                                    "value": "Mumbai"
                                },
                                {
                                    "key": "listing_type",
                                    "value": "Sale"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "My Properties (Owner View)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/properties?my_deals=1"
                    }
                },
                {
                    "name": "Add Property",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Luxury Villa\",\n    \"address\": \"High Street\",\n    \"listing_type\": \"Sale\",\n    \"property_type\": \"Villa\",\n    \"sale_price\": 10000000,\n    \"city_id\": 1,\n    \"state_id\": 1,\n    \"country_id\": 1\n}"
                        },
                        "url": "{{base_url}}/properties"
                    }
                },
                {
                    "name": "Edit Property",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Updated Villa Name\"\n}"
                        },
                        "url": "{{base_url}}/properties/1"
                    }
                }
            ]
        },
        {
            "name": "2. Authentication (OTP Flow)",
            "item": [
                {
                    "name": "User Registration",
                    "item": [
                        {
                            "name": "Send OTP",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/user/send-otp-registration",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\"phone\":\"9000011111\"}"
                                }
                            }
                        },
                        {
                            "name": "Verify OTP",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/user/verify-otp-registration",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\"phone\":\"9000011111\", \"otp\":\"123456\"}"
                                }
                            }
                        },
                        {
                            "name": "Complete Register",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/user/register",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\"name\":\"Test User\", \"phone\":\"9000011111\", \"email\":\"user@test.com\", \"password\":\"password\"}"
                                }
                            }
                        }
                    ]
                },
                {
                    "name": "Merchant Registration",
                    "item": [
                        {
                            "name": "Send OTP",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/merchant/send-otp-registration",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\"phone\":\"9000022222\"}"
                                }
                            }
                        },
                        {
                            "name": "Verify OTP",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/merchant/verify-otp-registration",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\"phone\":\"9000022222\", \"otp\":\"123456\"}"
                                }
                            }
                        },
                        {
                            "name": "Complete Register",
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/merchant/register",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\"name\":\"Test Merchant\", \"phone\":\"9000022222\", \"company_name\":\"Test Co\", \"password\":\"password\"}"
                                }
                            }
                        }
                    ]
                },
                {
                    "name": "Login (All Roles)",
                    "request": {
                        "method": "POST",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"identifier\": \"9000011111\",\n    \"password\": \"password\"\n}"
                        },
                        "url": "{{base_url}}/user/login"
                    }
                }
            ]
        },
        {
            "name": "3. Merchant Locations",
            "item": [
                {
                    "name": "My Locations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/merchant/my-locations"
                    }
                },
                {
                    "name": "Add Location",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"city_id\":1, \"city_name\":\"Mumbai\", \"area_name\":\"Andheri\"}"
                        },
                        "url": "{{base_url}}/merchant/add-working-location"
                    }
                }
            ]
        },
        {
            "name": "4. Admin Portal",
            "item": [
                {
                    "name": "Admin Login",
                    "request": {
                        "method": "POST",
                        "body": {
                            "mode": "raw",
                            "raw": "{\"identifier\":\"admin@test.com\", \"password\":\"password\"}"
                        },
                        "url": "{{base_url}}/admin/login"
                    }
                },
                {
                    "name": "List Merchants",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": "{{base_url}}/admin/merchants/list"
                    }
                },
                {
                    "name": "Approve Property",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"status\":\"active\"}"
                        },
                        "url": "{{base_url}}/properties/1"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "https://nodeapi.apaniasset.in/api"
        },
        {
            "key": "token",
            "value": "JWT_TOKEN_HERE"
        },
        {
            "key": "admin_token",
            "value": "ADMIN_TOKEN_HERE"
        }
    ]
}